<h1>Burger Selector</h1>

<h2>Burgers i need to eat</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    <li>
        <p>{{this.id}}<span class="label">. </span>{{this.burger_name}}</p>


        <button data-id="{{this.id}}" class="eaten">Eat this burger</button>

    </li>
    {{/unless}}
    {{/each}}
</ul>

<h2>Burgers I have eaten</h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    <li>
        <p>{{this.id}}<span class="label">. </span>{{this.burger_name}}</p>

    </li>
    {{/if}}
    {{/each}}
</ul>



<h2>Found a New Burger?</h2>
<form class="create-form">

    <div class="form-group">
        <label for="newBurg">Burger Name: </label>
        <input type="text" id="newBurg" name="name">
    </div>

    <button type="submit">Add Burger</button>
</form>