<h1>Burger Planner</h1>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h3>Burgers I Need to Eat</h3>
            {{#each burgers}} {{#unless this.devoured}}
            <div>
                <form action="/api/burgers/{{this.id}}" method="POST">
                    <button type="submit" class='burgerAvailable'> {{this.burger_name}}</button>
                </form>
            </div>
            {{/unless}} {{/each}}
        </div>

        <div class="col-md-6">
            <h3>Burgers I Have Eaten</h3>
            {{#each burgers}} {{#if this.devoured}}
            <div>
                {{this.burger_name}}
            </div>
            {{/if}} {{/each}}
        </div>
    </div>

    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <h3>Add A Burger</h3>
            <form action="/burgers" method="POST">
                <input type="text" id="name" name="burger_name" placeholder="Name of Burger">
                <button type="submit" class="addBurgerButton">Add Burger</button>
            </form>
        </div>
        <div class="col-md-4"></div>
    </div>
</div>